<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Alert Native ad theme-->
    <style name="AlertNativeAdTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@color/cardview_light_background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowIsFloating">true</item>
        <item name="colorPrimary">@color/black</item>
    </style>

    <!--Style fragment-->
    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="viewParent.headerText">
        <item name="android:textColor">@color/contentTextColor</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="viewParent.headerText.settingsMiniTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/grey_60</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="viewParent.headerText.settingsMiniTitle.icon">
        <item name="android:drawablePadding">16dp</item>
    </style>

</resources>